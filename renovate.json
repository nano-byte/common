{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":disableDependencyDashboard"],
  "packageRules": [
    {
      "matchPackagePatterns": ["Test", "Assert", "Mock", "[Xx]unit", "Moq"],
      "groupName": "Testing deps",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackagePatterns": ["SourceLink"],
      "matchPackageNames": ["System.ValueTuple", "JetBrains.Annotations"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackagePatterns": ["^Microsoft\\.Extensions"],
      "groupName": "Microsoft Extensions",
      "automerge": true,
      "automergeType": "branch",
      "separateMinorPatch": true
    },
    {
      "matchPackagePatterns": ["^Microsoft\\.Extensions"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    }
  ]
}
